    "group/group-utils": {
        "orientation": "horizontal",
        "modules": [
            "cpu", // First element is the "group leader" and won't ever be hidden
            "memory",
        ]
    },
    "cpu": {
        "format": "CPU {usage}%",
        "tooltip": false
    },
    "memory": {
        "format": "RAM {}%"
    },
    "group/group-battery": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-power",
            "transition-left-to-right": false,
        },
        "modules": [
            "battery",
            "battery#bat0",
            "battery#bat1",
        ]
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôá¶",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "battery#bat0": {
        "bat": "BAT0",
        "format": "BAT0 {capacity}% {icon}",
        "format-charging": "BAT0 {capacity}% Ôá¶",
        "format-plugged": "BAT0 {capacity}% Ôá¶",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "battery#bat1": {
